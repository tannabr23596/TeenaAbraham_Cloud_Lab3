@model _301222912_abraham_mehta_Lab3.Models.User

<form method="post" asp-controller="Users" asp-action="Login" class="text-center">
    <img src="images/signin.jpg" alt="Logo" width="150" height="150">
    <h2 class="mb-4">Login</h2>
    <div class="form-group">
        <input class="form-control" type="text" name="username" placeholder="Username" />
    </div>
    <div class="form-group">
        <input class="form-control" type="password" name="password" placeholder="Password" />
    </div>
    <button class="btn btn-primary btn-block" type="submit">Login</button>
    <a class="btn btn-info btn-block" href="/Users/Register">Register</a>
</form>